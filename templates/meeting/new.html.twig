{% extends 'base.html.twig' %}

{% block title %}Nouvelle Réunion{% endblock %}

{% block body %}
    <h1 class="text-4xl font-bold mb-6">Ajouter une nouvelle réunion</h1>
    {{ form_start(form) }}
      <div class="bg-white text-black p-6 rounded shadow-lg">
        {{ form_widget(form) }}
        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4">Enregistrer</button>
      </div>
    {{ form_end(form) }}
    <a href="{{ path('meeting_index') }}" class="text-blue-500 hover:underline mt-4 inline-block">Retour à la liste</a>

{% endblock %}
