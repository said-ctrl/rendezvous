{% extends 'base.html.twig' %}

{% block title %}Réunions
{% endblock %}

	{% block body %}
<style>
    .calendar-container {
        max-width: 800px;
        margin: auto;
    }

    .meeting-list {
        list-style-type: none;
        padding: 0;
    }

    .meeting-item {
        transition: background-color 0.2s;
    }

    .meeting-item:hover {
        background-color: #f9f9f9;
    }

    .text-gray-600 {
        color: #4b5563;
    }

    .text-gray-500 {
        color: #6b7280;
    }

    .container {
        max-width: 1200px;
    }

    .meeting-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .meeting-card:hover {
        transform: translateY(-2px);
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 16px;
    }
	.fc-event {
    color: black; /* Assurez-vous que le texte est visible */
}
</style>

