<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		{% block stylesheets %}
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

			<script src="https://cdn.tailwindcss.com"></script>
			<link href='https://fullcalendar.io/releases/fullcalendar/3.10.2/fullcalendar.min.css' rel='stylesheet'/>
			<script src='https://fullcalendar.io/releases/fullcalendar/3.10.2/lib/moment.min.js'></script>
			<script src='https://fullcalendar.io/releases/fullcalendar/3.10.2/fullcalendar.min.js'></script>

			<link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.1/flowbite.min.css" rel="stylesheet"/>
			<script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.1/flowbite.min.js"></script>
			<link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.min.css" rel="stylesheet"/>
			<script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.min.js"></script>
			<script src=" https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js "></script>

		{% endblock %}

		{% block javascripts %}{% endblock %}
	</head>
	<body
		class="bg-gray-900 text-white">
		<!-- Navbar -->
		<nav class="bg-gradient-to-r from-purple-500 to-blue-500 p-4 shadow-lg">
			<div class="container mx-auto flex justify-between items-center">
				<a href="#" class="text-white text-2xl font-bold">Reunion Agenda</a>
				<div class="space-x-4">

					<a href="{{ path('meeting_index')}}" class="text-white hover:text-gray-300">Accueil</a>


					{% if app.user %}

						{% if is_granted('ROLE_ADMIN') %}

							<a href="{{ path('app_admin') }}" class="text-white hover:text-gray-300">Tableau de bord</a>

						{% endif %}

						<a href="{{ path('app_logout') }}" class="text-white hover:text-gray-300">Déconnexion</a>


						<a href="">Profil</a>
					{% else %}

						<a href="{{ path('app_register')}}" class="text-white hover:text-gray-300">Inscription</a>
						<a href="{{ path('app_login')}}" class="text-white hover:text-gray-300">Connexion</a>
					{% endif %}
				</div>
			</div>
		</nav>

		<!-- Contenu Principal -->
		<main class="container mx-auto mt-10"> {% block body %}{% endblock %}
			</main>


			<footer class=" rounded-lg shadow dark:bg-gray-900 m-4">
				<div class="w-full max-w-screen-xl mx-auto p-4 md:py-8">
					<div class="sm:flex sm:items-center sm:justify-between">
						<a href="" class="flex items-center mb-4 sm:mb-0 space-x-3 rtl:space-x-reverse">
							<img src="" class="h-8" alt=""/>
							<span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">C'est L'Heure</span>
						</a>
						<ul class="flex flex-wrap items-center mb-6 text-sm font-medium text-gray-500 sm:mb-0 dark:text-gray-400">
							<li>
								<a href="#" class="hover:underline me-4 md:me-6">About</a>
							</li>
							<li>
								<a href="#" class="hover:underline me-4 md:me-6">Privacy Policy</a>
							</li>
							<li>
								<a href="#" class="hover:underline me-4 md:me-6">Licensing</a>
							</li>
							<li>
								<a href="{{ path('app_contact') }}" class="hover:underline">Contact</a>
							</li>
						</ul>
					</div>
					<hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8"/>
					<span class="block text-sm text-gray-500 sm:text-center dark:text-gray-400">© 2023
						<a href="https://flowbite.com/" class="hover:underline">SAID™</a>. All Rights Reserved.</span>
				</div>
			</footer>


		</body>
	</html>
